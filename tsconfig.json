{
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "emit": true,
  },
  "compilerOptions": {
    "noEmit": true,
    "composite": false,
    "downlevelIteration": false,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "target": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "preserveSymlinks": false,
    "checkJs": false,
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "stripInternal": true,
    "skipLibCheck": true,
    "pretty": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
  },
  "watchOptions": {
    "watchFile": "priorityPollingInterval",
    "excludeDirectories": [
      "**/node_modules/"
    ],
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src",
    "test",
  ],
  "compileOnSave": false
}